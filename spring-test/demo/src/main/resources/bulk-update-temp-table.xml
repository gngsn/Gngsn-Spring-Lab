<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="demo.bulkUpsert">
    <sql id="createTempTable">
        CREATE TEMPORARY TABLE user_temp LIKE `user`
    </sql>

    <sql id="bulkInsertTempTable">
        INSERT INTO user_temp (name, type) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.name}, #{item.type})
        </foreach>
    </sql>

    <sql id="updateTempTable">
        UPDATE user u
        INNER JOIN user_temp t ON u.name = t.name
        SET u.type = t.type
    </sql>

    <sql id="dropTempTable">
        DROP TABLE user_temp
    </sql>

    <insert id="bulkUpsertUsingTempTable2" parameterType="com.gngsn.demo.bulkUpsert.UserVO">
        <include refid="createTempTable"/>;

        <include refid="bulkInsertTempTable"/>;
        <include refid="updateTempTable"/>;

        <include refid="dropTempTable"/>;
    </insert>
</mapper>

