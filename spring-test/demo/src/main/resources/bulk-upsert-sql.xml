<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="demo.bulkUpsert">
    <insert id="insertInit" parameterType="com.gngsn.demo.bulkUpsert.UserVO">
        INSERT INTO user (name, type) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.name}, #{item.type})
        </foreach>
    </insert>

    <insert id="bulkUpsertUserList" parameterType="com.gngsn.demo.bulkUpsert.UserVO">
        INSERT INTO user (name, type) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.name}, #{item.type})
        </foreach>
        ON DUPLICATE KEY UPDATE
        type = VALUES(type)
    </insert>

    <insert id="bulkUpsertUsingTempTable" parameterType="com.gngsn.demo.bulkUpsert.UserVO">
        CREATE TEMPORARY TABLE user_temp LIKE `user`;

        INSERT INTO user_temp (name, type) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.name}, #{item.type})
        </foreach>;

        UPDATE user u
            INNER JOIN user_temp t ON u.name = t.name
        SET u.type = t.type;

        DROP TABLE user_temp;
    </insert>

    <delete id="truncate">
        TRUNCATE user;
    </delete>
</mapper>

