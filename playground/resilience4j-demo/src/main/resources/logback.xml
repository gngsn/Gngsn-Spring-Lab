<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%red(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %highlight(%-5level) %boldMagenta(%logger{5}) - %cyan(%msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.web.server" additivity="false">
        <level value="debug"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.springframework.web.reactive" additivity="false">
        <level value="debug"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>